pipeline {
    agent any 

    stages {
        stage('Clone Repo') {
            steps {
                checkout scm

                sh 'ls -la'
                sh 'env'
            }
        }

        stage('Identify Changes') {
            steps {
                sh 'env'

                script {
                    def cmd = "git diff --name-only $GIT_PREVIOUS_COMMIT $GIT_COMMIT | tr '\n\r' ',' | sed \'s/\(.*\),.*/\1/\'"
                    def changes = sh(script: cmd, returnStdout: true)
                    echo changes
                    echo 'aiushdiaushd'
                    infraHasChanged(changes)
                }
            }
        }
    }
}

def infraHasChanged(c) {
    echo c
}