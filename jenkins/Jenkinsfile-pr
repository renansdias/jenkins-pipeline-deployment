pipeline {
    agent any 

    stages {
        stage('Clone Repo') {
            steps {
                checkout scm

                sh 'ls -la'
                sh 'env'
            }
        }

        stage('Identify Changes') {
            steps {
                sh 'env'
                sh 'git diff --name-only $GIT_PREVIOUS_COMMIT $GIT_COMMIT'
            }
        }
    }
}
